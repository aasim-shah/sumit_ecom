<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
       <img src="./img/hero-pizza.png" class="mx-auto h-64" alt="">
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All products</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% products.forEach(function(product) { %>
        <div class="w-full md:w-64 mx-auto bg-gray-200 py-3 rounded-md px-1">
           <a href="view_product/<%= product._id %>"><img class="h-40 mb-4 mx-auto" src="/img/<%= product.image %>" alt=""></a> 
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= product.name %></h2>                
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= product.price %></span>
                    <button data-pizza="<%= JSON.stringify(product) %>"
                        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>


